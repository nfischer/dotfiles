[user]
	name = Nate Fischer
	email = ntfschr@google.com
[core]
	pager = diff-so-fancy | less --tabs=4 -RFX
[color]
	ui = true
[credential]
	helper = cache --timeout 3600
[alias]
	back-hard = reset --hard HEAD~1
	br = branch
	brv = branch -v
	co = checkout
	cob = checkout -b
	cy = cherry-pick
	head = "!f() { [ -z $1 ] && git diff HEAD || git diff \"HEAD~$1\"; }; f"
	rc = commit -a --amend --no-edit
	rv = remote -v
	sh = stash
	squash = "!f() { git rebase -i HEAD~$1; }; f"
	st = status
[push]
	default = simple
[color "diff"]
	old = red bold
	new = green bold
	whitespace = red reverse
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[pretty]
	commitdate = format:%C(yellow)commit %H %C(auto)%d%n%C(white)Author:     %an <%ae>%nCommitDate: %ad%n%n%C(white)%w(0,4,4)%B%n
[include]
	path = ~/.gitconfig.local
[stash]
	showPatch = true
