#!/bin/bash

if [ -z "$(which telnet 2>/dev/null)" ]; then
    echo "Error: telnet is not installed. Exiting." >&2
    exit 2
fi

if [ "$1" != "clean" ]; then
    setterm -cursor off
    telnet towel.blinkenlights.nl
    clear
    echo "Thank you for watching ASCII Star Wars"
fi

# clean up
setterm -cursor on

exit 0
